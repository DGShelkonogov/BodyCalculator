<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tabbedFragments.Fragment_regulation_heart">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/beau_regular"
            android:text="@string/regulation_heart"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            android:fontFamily="@font/beau_regular"
            android:text="@string/title_1_regulation_heart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <EditText
            android:id="@+id/edtNumCSS"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/beau_regular"
            android:hint="48"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="ЧСС:"
            android:fontFamily="@font/beau_regular"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumCSS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edtNumCSS"
            app:layout_constraintVertical_bias="0.611" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(уд./мин.)"
            android:fontFamily="@font/beau_regular"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumCSS"
            app:layout_constraintStart_toEndOf="@+id/edtNumCSS"
            app:layout_constraintTop_toTopOf="@+id/edtNumCSS" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="САД:"
            android:fontFamily="@font/beau_regular"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumSAD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edtNumSAD" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(мм рт. ст.)"
            android:fontFamily="@font/beau_regular"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumSAD"
            app:layout_constraintStart_toEndOf="@+id/edtNumSAD"
            app:layout_constraintTop_toBottomOf="@+id/edtNumCSS" />

        <EditText
            android:id="@+id/edtNumSAD"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="110"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/edtNumCSS" />


        <Button
            android:id="@+id/btn_regulation_heart_define"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/define"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtNumSAD" />

        <TextView
            android:id="@+id/txt_regulation_heart_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/beau_regular"
            android:text="Резульатат: "
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_regulation_heart_define" />

        <TextView
            android:id="@+id/txt_regulation_heart_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:text="@string/regulation_heart_rec"
            app:layout_constraintStart_toStartOf="@+id/txt_regulation_heart_res"
            app:layout_constraintTop_toBottomOf="@+id/txt_regulation_heart_res" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>