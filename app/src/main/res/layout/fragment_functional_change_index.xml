<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.tabbedFragments.Fragment_functional_change_index">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/beau_regular"
            android:text="@string/change_index"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            android:fontFamily="@font/beau_regular"
            android:text="@string/title_1_change_index"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <Button
            android:id="@+id/btn_change_index_define"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="5dp"
            android:text="@string/define"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtNumBodyMass" />

        <TextView
            android:id="@+id/txt_change_index_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/beau_regular"
            android:text="Резульатат: "
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_change_index_define" />


        <EditText
            android:id="@+id/edtNumCSS"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="48"
            android:inputType="number"
            android:fontFamily="@font/beau_regular"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="ЧСС:"
            android:fontFamily="@font/beau_regular"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumCSS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edtNumCSS"
            app:layout_constraintVertical_bias="0.611" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(уд./мин.)"
            android:fontFamily="@font/beau_regular"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumCSS"
            app:layout_constraintStart_toEndOf="@+id/edtNumCSS"
            app:layout_constraintTop_toTopOf="@+id/edtNumCSS" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="САД:"
            android:fontFamily="@font/beau_regular"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumSAD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edtNumSAD" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(мм рт. ст.)"
            android:fontFamily="@font/beau_regular"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumSAD"
            app:layout_constraintStart_toEndOf="@+id/edtNumSAD"
            app:layout_constraintTop_toBottomOf="@+id/edtNumCSS" />

        <EditText
            android:id="@+id/edtNumSAD"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="110"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/edtNumCSS" />

        <EditText
            android:id="@+id/edtNumDAD"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="80"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/edtNumSAD" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="ДАД:"
            android:fontFamily="@font/beau_regular"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumDAD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edtNumDAD" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(мм рт. ст.)"
            android:fontFamily="@font/beau_regular"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumDAD"
            app:layout_constraintStart_toEndOf="@+id/edtNumDAD"
            app:layout_constraintTop_toTopOf="@+id/edtNumDAD" />


        <EditText
            android:id="@+id/edtNumHeight"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/beau_regular"
            android:hint="1.78"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/edtNumDAD" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/beau_regular"
            android:text="Рост:"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edtNumHeight" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/beau_regular"
            android:text="(М)"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumHeight"
            app:layout_constraintStart_toEndOf="@+id/edtNumHeight"
            app:layout_constraintTop_toTopOf="@+id/edtNumHeight" />


        <EditText
            android:id="@+id/edtNumBodyMass"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/beau_regular"
            android:hint="67"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/txtBodyMass"
            app:layout_constraintTop_toBottomOf="@+id/edtNumHeight" />

        <TextView
            android:id="@+id/txtBodyMass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/beau_regular"
            android:text="@string/bodyMass"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumBodyMass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edtNumBodyMass" />

        <TextView
            android:id="@+id/txtMassKG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/beau_regular"
            android:text="(Кг)"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/edtNumBodyMass"
            app:layout_constraintStart_toEndOf="@+id/edtNumBodyMass"
            app:layout_constraintTop_toTopOf="@+id/edtNumBodyMass" />




        <TextView
            android:id="@+id/txt_change_index_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/txt_change_index_res"
            app:layout_constraintTop_toBottomOf="@+id/txt_change_index_res" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>